<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.fragments.settings.SettingFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/CIV_setting"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/image"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Name_tv_setting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:text="@string/geeketch_geektevich"
            android:textColor="@color/setting_textColor1"
            android:textSize="13dp"
            app:layout_constraintLeft_toRightOf="@id/CIV_setting"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Account_tv_setting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:text="@string/geektech_gmail_com"
            android:textColor="@color/setting_textColor1"
            android:textSize="10dp"
            app:layout_constraintLeft_toRightOf="@id/CIV_setting"
            app:layout_constraintTop_toBottomOf="@id/Name_tv_setting" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/Edit_btn_setting"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/setting_buttonColor"
            android:text="@string/edit"
            app:cornerRadius="10dp"
            app:layout_constraintLeft_toRightOf="@id/Name_tv_setting"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Preferences_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="25dp"
            android:text="@string/preferences"
            android:textColor="@color/setting_textColor2"
            android:textSize="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/CIV_setting" />

        <ImageView
            android:id="@+id/DarkMode_iv_setting"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/ic_dark_mode"
            android:backgroundTint="@color/setting_imageColor2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Preferences_tv" />

        <TextView
            android:id="@+id/DarkMode_tv_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="30dp"
            android:text="@string/darkmode"
            android:textColor="@color/setting_textColor3"
            android:textSize="13dp"
            app:layout_constraintLeft_toRightOf="@id/DarkMode_iv_setting"
            app:layout_constraintTop_toBottomOf="@id/Preferences_tv" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/DarkMode_sc_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="15dp"
            android:thumb="@drawable/thump"
            app:layout_constraintLeft_toRightOf="@id/DarkMode_tv_setting"
            app:layout_constraintTop_toBottomOf="@id/Preferences_tv"
            app:track="@drawable/track" />

        <ImageView
            android:id="@+id/Notification_iv_setting"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/ic_notifications"
            android:backgroundTint="@color/setting_imageColor2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/DarkMode_iv_setting" />

        <TextView
            android:id="@+id/Notification_tv_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="50dp"
            android:text="@string/notification"
            android:textColor="@color/setting_textColor3"
            android:textSize="13dp"
            app:layout_constraintLeft_toRightOf="@id/Notification_iv_setting"
            app:layout_constraintTop_toBottomOf="@id/DarkMode_tv_setting" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/Name_sc_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="143dp"
            android:layout_marginTop="25dp"
            android:thumb="@drawable/thump"
            app:layout_constraintLeft_toRightOf="@id/Notification_tv_setting"
            app:layout_constraintTop_toBottomOf="@id/DarkMode_sc_setting"
            app:track="@drawable/track" />

        <TextView
            android:id="@+id/Summary_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="25dp"
            android:text="@string/summary"
            android:textColor="@color/setting_textColor2"
            android:textSize="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Notification_iv_setting" />

        <ImageView
            android:id="@+id/Location_iv_setting"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/ic_location"
            android:backgroundTint="@color/setting_imageColor2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Summary_tv" />

        <TextView
            android:id="@+id/Location_tv_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="30dp"
            android:text="@string/news_by_location"
            android:textColor="@color/setting_textColor3"
            android:textSize="13dp"
            app:layout_constraintLeft_toRightOf="@id/Location_iv_setting"
            app:layout_constraintTop_toBottomOf="@id/Summary_tv" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/Location_sc_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="109dp"
            android:layout_marginTop="25dp"
            android:thumb="@drawable/thump"
            app:layout_constraintLeft_toRightOf="@id/Location_tv_setting"
            app:layout_constraintTop_toBottomOf="@id/Summary_tv"
            app:track="@drawable/track" />

        <ImageView
            android:id="@+id/Time_iv_setting"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/ic_access_time"
            android:backgroundTint="@color/setting_imageColor2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Location_iv_setting" />

        <TextView
            android:id="@+id/Time_tv_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="50dp"
            android:text="@string/time_to_read"
            android:textColor="@color/setting_textColor3"
            android:textSize="13dp"
            app:layout_constraintLeft_toRightOf="@id/Time_iv_setting"
            app:layout_constraintTop_toBottomOf="@id/Location_tv_setting" />

        <ImageButton
            android:id="@+id/Time_ib_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/ic_arrow_forward"
            android:backgroundTint="@color/setting_imageColor2"
            app:layout_constraintLeft_toRightOf="@id/Time_tv_setting"
            app:layout_constraintTop_toBottomOf="@id/Location_sc_setting" />

        <ImageView
            android:id="@+id/Language_iv_setting"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/ic_language"
            android:backgroundTint="@color/setting_imageColor2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Time_iv_setting" />

        <TextView
            android:id="@+id/Language_tv_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="50dp"
            android:text="@string/language"
            android:textColor="@color/setting_textColor3"
            android:textSize="13dp"
            app:layout_constraintLeft_toRightOf="@id/Language_iv_setting"
            app:layout_constraintTop_toBottomOf="@id/Time_tv_setting" />

        <ImageButton
            android:id="@+id/Language_ib_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="187dp"
            android:layout_marginTop="43dp"
            android:background="@drawable/ic_arrow_forward"
            android:backgroundTint="@color/setting_imageColor2"
            app:layout_constraintLeft_toRightOf="@id/Language_tv_setting"
            app:layout_constraintTop_toBottomOf="@id/Time_ib_setting" />

        <ImageView
            android:id="@+id/Block_iv_setting"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/ic_block"
            android:backgroundTint="@color/setting_imageColor2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Language_iv_setting" />

        <TextView
            android:id="@+id/Block_tv_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="50dp"
            android:text="@string/block_content_and_sources"
            android:textColor="@color/setting_textColor3"
            android:textSize="13dp"
            app:layout_constraintLeft_toRightOf="@id/Block_iv_setting"
            app:layout_constraintTop_toBottomOf="@id/Language_tv_setting" />

        <ImageButton
            android:id="@+id/Block_ib_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="43dp"
            android:background="@drawable/ic_arrow_forward"
            android:backgroundTint="@color/setting_imageColor2"
            app:layout_constraintLeft_toRightOf="@id/Block_tv_setting"
            app:layout_constraintTop_toBottomOf="@id/Language_ib_setting" />

        <ImageView
            android:id="@+id/Help_iv_setting"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/ic_help"
            android:backgroundTint="@color/setting_imageColor2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Block_iv_setting" />

        <TextView
            android:id="@+id/Help_tv_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="50dp"
            android:text="@string/help"
            android:textColor="@color/setting_textColor3"
            android:textSize="13dp"
            app:layout_constraintLeft_toRightOf="@id/Help_iv_setting"
            app:layout_constraintTop_toBottomOf="@id/Block_tv_setting" />

        <ImageButton
            android:id="@+id/Help_ib_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="215dp"
            android:layout_marginTop="43dp"
            android:background="@drawable/ic_arrow_forward"
            android:backgroundTint="@color/setting_imageColor2"
            app:layout_constraintLeft_toRightOf="@id/Help_tv_setting"
            app:layout_constraintTop_toBottomOf="@id/Block_ib_setting" />


        <!--        <ImageButton-->
        <!--            android:id="@+id/Block_ib_setting"-->
        <!--            app:layout_constraintTop_toBottomOf="@id/Language_ib_setting"-->
        <!--            android:layout_marginTop="43dp"-->
        <!--            app:layout_constraintLeft_toRightOf="@id/Block_tv_setting"-->
        <!--            android:layout_marginLeft="90dp"-->
        <!--            android:background="@drawable/ic_arrow_forward"-->
        <!--            android:backgroundTint="@color/setting_imageColor2"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"/>-->

        <ImageView
            android:id="@+id/search"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/ic_search"
            android:backgroundTint="@color/setting_imageColor2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Help_ib_setting" />

        <TextView
            android:id="@+id/search_tv_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="50dp"
            android:text="@string/search"
            android:textColor="@color/setting_textColor3"
            android:textSize="13dp"
            app:layout_constraintLeft_toRightOf="@id/Help_iv_setting"
            app:layout_constraintTop_toBottomOf="@id/Help_tv_setting" />

        <ImageButton
            android:id="@+id/search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="215dp"
            android:layout_marginTop="43dp"
            android:background="@drawable/ic_arrow_forward"
            android:backgroundTint="@color/setting_imageColor2"
            app:layout_constraintLeft_toRightOf="@id/Help_tv_setting"
            app:layout_constraintTop_toBottomOf="@id/Help_ib_setting" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>